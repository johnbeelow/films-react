{
  "compilerOptions": {
    /* üéØ –¶–µ–ª–µ–≤—ã–µ —Å—Ç–∞–Ω–¥–∞—Ä—Ç—ã –∏ –æ–∫—Ä—É–∂–µ–Ω–∏–µ */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "noUncheckedIndexedAccess": true,

    /* üìú –ü–æ–¥–¥–µ—Ä–∂–∫–∞ –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã—Ö —Ñ–∞–π–ª–æ–≤ */
    "allowJs": true,
    "resolveJsonModule": true,

    /* üöÄ –ü—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å –∏ –æ–ø—Ç–∏–º–∏–∑–∞—Ü–∏–∏ */
    "incremental": true,
    "isolatedModules": true,

    /* üîç –ü—Ä–æ–≤–µ—Ä–∫–∞ —Ç–∏–ø–æ–≤ –∏ —Å—Ç—Ä–æ–≥–∏–µ –ø—Ä–∞–≤–∏–ª–∞ */
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,

    /* ‚ö° –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ —Å–±–æ—Ä–∫–æ–π */
    "noEmit": true,
    "jsx": "react-jsx",

    /* üìÇ –ê–ª–∏–∞—Å—ã */
    "baseUrl": "src",
    "paths": {
      "*": ["src/*"],
      "@app/*": ["app/*"],
      "@pages/*": ["pages/*"],
      "@widgets/*": ["widgets/*"],
      "@features/*": ["features/*"],
      "@entities/*": ["entities/*"],
      "@shared/*": ["shared/*"]
    }
  },

  /* üìå –ö–∞–∫–∏–µ —Ñ–∞–π–ª—ã –≤–∫–ª—é—á–∞—Ç—å –≤ –∫–æ–º–ø–∏–ª—è—Ü–∏—é */
  "include": ["src", "global.d.ts", "**/*.ts", "**/*.tsx"],

  /* üõë –ò—Å–∫–ª—é—á–∞–µ–º—ã–µ —Ñ–∞–π–ª—ã –∏ –ø–∞–ø–∫–∏ */
  "exclude": ["node_modules"]
}
